{% extends 'ClientBundle::index.html.twig' %}

{% block body %}
    {{ include('ClientBundle:navbar:navbar.html.twig') }}
    <form action="{{ path('newsletter_send_part_2', {'idMailingGroup': idMailingGroup, 'idAction': 1}) }}" class="userForm" method="post">
        <h1>Envoi de newsletter</h1>
        <div class="form_group">
            <label for="newsletter">{{ 'chooseNewsletter'|trans }}</label>
            <select id="newsletter" name="newsletter">
                {% for news in newsletters %}
                    <option value="{{ news.id }}">{{ news.title }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-default">{{ 'ok'|trans }}</button>
    </form>
{% endblock %}