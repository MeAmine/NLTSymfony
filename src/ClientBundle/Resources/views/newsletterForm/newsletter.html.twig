{% extends 'ClientBundle::index.html.twig' %}

{% block body %}
    {{ include('ClientBundle:navbar:navbar.html.twig') }}
    {{ form_start(form, { 'attr': {'class': 'userForm'} }) }}
        <h1>Creation de newsletter</h1>
        <div class="form_group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
        </div>
        <div class="form_group">
            {{ form_label(form.description) }}<br/>
            {{ form_widget(form.description) }}
        </div>
        <div class="form_group">
            {{ form_label(form.template) }}<br/>
            {{ form_widget(form.template) }}
        </div>
        <label>{{ 'mailingGroup'|trans }}</label>
        <select name="mailingGroup" id="mailingGroup">
            {% for group in mailingGroups %}
                <option value="{{ group.id }}">{{ group.label }}</option>
            {% endfor %}
        </select>
        <br />
        <button type="submit" class="btn btn-default">{{ 'ok'|trans }}</button>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.ckeditor.com/4.7.0/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('newsletter_template');
    </script>
{% endblock %}