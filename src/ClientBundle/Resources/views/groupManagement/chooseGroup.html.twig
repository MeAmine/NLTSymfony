{% extends 'ClientBundle::index.html.twig' %}

{% block body %}
    {{ include('ClientBundle:navbar:navbar.html.twig') }}
    <form action="{{ path('mailing_group_form') }}" class="userForm" method="post">
        <h1>{{ 'chooseGroup'|trans }}</h1>
        <div class="form_group">
            <label for="groupSelect">{{ 'groupSelect'|trans }}</label>
            <select id="groupSelect" name="groupSelect">
                {% for group in MailingGroup %}
                    <option value="{{ group.id }}">{{ group.label }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-default">{{ 'ok'|trans }}</button>
    </form>
{% endblock %}