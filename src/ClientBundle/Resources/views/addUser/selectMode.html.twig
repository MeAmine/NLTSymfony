{% extends 'ClientBundle::index.html.twig' %}

{% block body %}
    {{ include('ClientBundle:navbar:navbar.html.twig') }}
    <form action="{{ path('choose_mode_add_user') }}" class="userForm" method="post">
        <h1>{{ 'selectMoreOrOne'|trans }}</h1>
        <div class="form_group">
            <label for="selectMode">{{ 'selectMode'|trans }}</label>
            <select id="selectMode" name="selectMode">
                <option value="0">{{ 'moreUser'|trans }}</option>
                <option value="1">{{ 'oneUser'|trans }}</option>
            </select>
        </div>
        <button type="submit" class="btn btn-default">{{ 'ok'|trans }}</button>
    </form>
{% endblock %}