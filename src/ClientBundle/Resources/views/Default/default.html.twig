{% extends 'ClientBundle::index.html.twig' %}

{% block title %}Bienvenu sur MST{% endblock %}

{% block body %}
    {{ include('ClientBundle:navbar:navbar.html.twig') }}
    {{ include('ClientBundle:Default:flashMessage.html.twig') }}
    <div class="container-fluid homepage">
        <div class="row">
            <div class="col-lg-5">
                <h1>Mes News</h1>
                <div class='search-box'>
                    <form class='search-form'>
                        <input class='form-control' placeholder='{{ 'Search in my news'|trans }}' type='text'>
                        <button class='btn btn-link search-btn'>
                            <i class='glyphicon glyphicon-search'></i>
                        </button>
                    </form>
                </div>
                <div class="dropper">
                    {% for n in newsletters %}
                        {% if n.favorite == true %}
                            <div class="col-lg-6 draggable">
                                <div>
                                    {{ n.title }}
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            <div class="col-lg-2">
                <div class="switching-arrows">
                    <img src="{{ asset('images/switching-arrows.png') }}" alt="Switching Arrows">
                </div>
            </div>
            <div class="col-lg-5">
                <h1>Les News</h1>
                <div class="search-box">
                    <form class='search-form'>
                        <input class='form-control' placeholder='{{ 'Search a news'|trans }}' type='text'>
                        <button class='btn btn-link search-btn'>
                            <i class='glyphicon glyphicon-search'></i>
                        </button>
                    </form>
                </div>
                <div class="dropper">
                    {% for n in newsletters %}
                        <div class="col-lg-6 draggable">
                            <div>
                                {{ n.title }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="{{ asset('js/dragDrop.js') }}"></script>
{% endblock %}