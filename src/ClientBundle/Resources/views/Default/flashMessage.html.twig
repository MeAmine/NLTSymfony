{% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
        {% if type == 'success' %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% elseif type == 'error' %}
            <div class="alert alert-error" role="alert">
                {{ message }}
            </div>
        {% endif %}
    {% endfor %}
{% endfor %}