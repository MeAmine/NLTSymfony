{% extends 'UserBundle::layout.html.twig' %}

{% block fos_user_content %}
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="userForm">
        <div class="request-container">
            <h1>{{ 'reset'|trans }}</h1>
            <form class="userForm">
                <div>
                    <label for="username">{{ 'resetting.request.username'|trans }}</label>
                    <input type="text" id="username" name="username" required="required" />
                </div>
                <div>
                    <input type="submit" class="request-submit" value="{{ 'resetting.request.submit'|trans }}" />
                </div>
            </form>
            <div class="login-help">
                <a href="{{ path('fos_user_registration_register') }}">{{ 'register'|trans }}</a> - <a href="{{ path('fos_user_security_login') }}">{{ 'login'|trans }}</a>
            </div>
        </div>
    </form>
{% endblock fos_user_content %}