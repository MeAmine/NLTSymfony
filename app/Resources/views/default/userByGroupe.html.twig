
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Entreprise</th>
                <th>Civilité</th>
                <th>Ville - Pays</th>
            </tr>
        </thead>

        <tbody>
        {% for client in clients %}
            {% if client.isClient == 1 %}
            <tr>
                <td>{{client.nom}}</td>
                <td>{{client.prenom}}</td>
                <td>{{client.email}}</td>
                <td>{{client.entreprise}}</td>
                <td>{{client.civilite}}</td>
                <td>{{client.ville}} - {{client.pays.countryName}}</td>       
            </tr> 
            {% else %}
              <tr style="color : red;">
                <td>{{client.nom}}</td>
                <td>{{client.prenom}}</td>
                <td>{{client.email}}</td>
                <td>{{client.entreprise}}</td>
                <td>{{client.civilite}}</td>
                <td>{{client.ville}} - {{client.pays.countryName}}</td>              
            </tr> 
            {% endif %} 
            {% endfor%}          
        </tbody>
    </table>
