<form action="{{ path("pnl_index_groupemanagement")}}" method="post">     
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Selectionner</th>
            </tr>
        </thead>

        <tbody>
        {% for groupe in groupes %}
            <tr>
                <td>{{groupe.nom}}</td>                    
            

                <td> <label><input type="radio"  name="groupList[]" value="{{groupe.id}}"></label></td>
             
             </tr>     

        {% endfor%}

        </tbody>
    </table>

       <div class="col-lg-3">
   <input class="btn btn-success btn-block"  type="submit" id="_submit" name="_submit" value="Ajouter un groupe" />
     </div>
     <div class="col-lg-3">
   <input class="btn btn-danger btn-block"  type="submit" id="_submit" name="_submit" value="Supprimer" />
   </div>
     <div class="col-lg-3">
     <input class="btn btn-warning btn-block"  type="submit" id="_submit" name="_submit" value="Modifier" />
   </div> 
   <div class="col-lg-3">
    <input class="btn btn-primary btn-block"  type="submit" id="_submit" name="_submit" value="Voir les utilisateurs du groupe" />
    </div>
   </form>


